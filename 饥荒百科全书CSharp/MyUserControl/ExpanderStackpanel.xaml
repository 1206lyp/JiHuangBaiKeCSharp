<UserControl x:Class="饥荒百科全书CSharp.MyUserControl.ExpanderStackpanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:饥荒百科全书CSharp.MyUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionary/CursorDictionary.xaml" />
                <ResourceDictionary Source="../Dictionary/ExpanderDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Expander x:Name="UCExpander" Margin="0" Style="{DynamicResource ExpanderStyle}" VerticalAlignment="Top">
        <Expander.Header>
            <Canvas Width="90" Height="32">
                <Image x:Name="UCImage" Width="32" Height="32" Visibility="Collapsed" />
                <TextBlock x:Name="UCTextBlock" Padding="0,3.2,0,0" Width="58" Height="32" FontSize="20" />
            </Canvas>
        </Expander.Header>
        <StackPanel x:Name="UCStackPanel" Orientation="Horizontal"/>
    </Expander>

</UserControl>
