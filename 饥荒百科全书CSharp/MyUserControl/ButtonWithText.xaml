<UserControl x:Class="饥荒百科全书CSharp.MyUserControl.ButtonWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:饥荒百科全书CSharp.MyUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="64">
    <Grid>
        <Button Width="64" Background="{x:Null}" BorderBrush="{x:Null}" Height="80">
            <StackPanel Height="80" Width="64" Margin="-2,-2,0,0" >
                <Image x:Name="UCImage" Source="../Resources/F_dragoon_heart.png" Width="48" Height="48" />
                <TextBlock x:Name="UCTextBlock" Text="龙人心龙人" HorizontalAlignment="Center" Margin="0,8.5,0,0" Background="#FFD69E9E" TextWrapping="Wrap"/>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
